<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
    </style>

    <!-- Main application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Action bar color -->
        <item name="colorPrimary">@color/action_bar_color_primary</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/action_bar_color_primary_dark</item>
        <item name="android:windowBackground">@color/main_window_background_color</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/black</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
