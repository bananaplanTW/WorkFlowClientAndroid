<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Action bar color -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/main_window_background_color</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Main application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="AppTheme.WhiteBackground">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/action_bar_up_button_color</item>
        <item name="colorControlHighlight">@color/action_bar_menu_item_color_control_highlight</item>
        <item name="actionMenuTextColor">@color/action_bar_menu_item_text_color</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>
    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/action_bar_up_button_color</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="WipTaskCardButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="WipTaskCardButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wip_task_card_button_text_color</item>
        <item name="android:textSize">@dimen/wip_task_card_button_text_size</item>
        <item name="android:drawablePadding">@dimen/wip_task_card_button_drawable_padding</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/button_padding_left_right</item>
        <item name="android:paddingTop">@dimen/button_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/button_padding_top_bottom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="ButtonStyle.Green">
        <item name="android:background">@drawable/dialog_green_button_background</item>
    </style>


    <style name="DialogButtonStyle">
        <item name="android:layout_width">@dimen/dialog_button_width</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:layout_marginLeft">@dimen/dialog_button_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/dialog_button_margin_left_right</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DialogButtonStyle.Green">
        <item name="android:textColor">@color/dialog_green_button_text_color</item>
        <item name="android:background">@drawable/dialog_green_button_background</item>
    </style>
    <style name="DialogButtonStyle.Gray">
        <item name="android:textColor">@color/dialog_gray_button_text_color</item>
        <item name="android:background">@drawable/dialog_gray_button_background</item>
    </style>
    <style name="DialogButtonStyle.Disabled">
        <item name="android:textColor">@color/dialog_disabled_button_text_color</item>
        <item name="android:background">@drawable/dialog_disable_button_background</item>
    </style>

</resources>
