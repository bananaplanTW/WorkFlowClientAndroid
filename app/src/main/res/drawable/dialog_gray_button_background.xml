<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dialog_button_corner_radius" />
            <solid android:color="@color/dialog_gray_button_pressed_background_color" />
            <stroke
                android:width="1dp"
                android:color="@color/dialog_gray_button_stroke_color" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dialog_button_corner_radius" />
            <solid android:color="@color/dialog_gray_button_background_color" />
            <stroke
                android:width="1dp"
                android:color="@color/dialog_gray_button_stroke_color" />
        </shape>
    </item>

</selector>