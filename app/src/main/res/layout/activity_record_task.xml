<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/record_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_task_name_text_color"
                android:textSize="@dimen/title_information_text_size" />

            <TextView
                android:id="@+id/record_case_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_case_name_text_color"
                android:textSize="@dimen/title_information_text_size" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <include layout="@layout/horizontal_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">


    </LinearLayout>

    <include layout="@layout/horizontal_divider" />

    <LinearLayout
        android:id="@+id/record_task_action_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/record_task_action_container_height"
        android:paddingLeft="@dimen/record_task_action_container_padding_left_right"
        android:paddingRight="@dimen/record_task_action_container_padding_left_right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/record_task_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:background="?selectableItemBackground"/>

        <ImageView
            android:id="@+id/record_task_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/record_task_upload_button_margin_left"
            android:src="@drawable/ic_upload"
            android:background="?selectableItemBackground"/>


    </LinearLayout>

</LinearLayout>
