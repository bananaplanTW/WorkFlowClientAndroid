<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/log_item_min_height"
    android:padding="@dimen/log_item_padding" >

    <ImageView
        android:id="@+id/file_image"
        android:layout_width="@dimen/log_file_item_width_height"
        android:layout_height="@dimen/log_file_item_width_height"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/file_image"
        android:layout_marginLeft="@dimen/log_item_title_container_margin_left"
        android:layout_toRightOf="@+id/file_image"
        android:textColor="@color/log_item_text_color"
        android:textSize="@dimen/log_item_user_name_text_size" />

    <TextView
        android:id="@+id/log_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/log_item_timestamp_margin_top"
        android:layout_below="@+id/file_name"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/log_item_timestamp_text_size"/>

</RelativeLayout>
