<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_menu_item_height"
    android:paddingLeft="@dimen/drawer_menu_list_padding"
    android:paddingRight="@dimen/drawer_menu_list_padding">

    <TextView
        android:id="@+id/menu_case_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/drawer_menu_item_text_size"
        android:textColor="@color/drawer_menu_item_title_text_color"/>

    <ImageView
        android:id="@+id/create_case_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_menu_create_case_button_padding"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_create_case"
        android:background="?selectableItemBackgroundBorderless"/>

</RelativeLayout>
