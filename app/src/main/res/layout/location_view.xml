<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/location_progress_bar"
        android:layout_width="@dimen/location_progress_circle_width_height"
        android:layout_height="@dimen/location_progress_circle_width_height" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="@dimen/location_text_drawable_padding"
        android:visibility="gone" />

</FrameLayout>