<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/log_item_min_height"
    android:padding="@dimen/log_item_padding" >

    <ImageView
        android:id="@+id/log_icon"
        android:layout_width="@dimen/worker_avatar_width_height"
        android:layout_height="@dimen/worker_avatar_width_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_worker_black" />

    <TextView
        android:id="@+id/log_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/log_icon"
        android:layout_marginLeft="@dimen/log_item_title_container_margin_left"
        android:layout_toRightOf="@+id/log_icon"
        android:textColor="@color/log_item_text_color"
        android:textSize="@dimen/log_item_user_name_text_size" />

    <TextView
        android:id="@+id/log_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/log_item_description_margin_top"
        android:layout_below="@+id/log_user_name"
        android:layout_alignLeft="@+id/log_user_name"
        android:textSize="@dimen/detailed_task_list_item_description_text_size"
        android:textColor="@color/log_item_text_color"/>

    <TextView
        android:id="@+id/log_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/log_item_timestamp_margin_top"
        android:layout_below="@+id/log_description"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/log_item_timestamp_text_size"/>

</RelativeLayout>
